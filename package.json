{
  "name": "voltasis-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Voltasis API documentation",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/local-server.ts",
    "start": "node dist/local-server.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "fetch-openapi": "bash scripts/fetch-openapi.sh",
    "convert": "tsx scripts/convert-to-markdown.ts",
    "generate-index": "tsx scripts/generate-index.ts",
    "deploy:dev": "bash scripts/deploy.sh dev",
    "deploy:prod": "bash scripts/deploy.sh prod",
    "configure-cursor": "tsx scripts/configure-cursor.ts",
    "cdk:synth": "cd infrastructure && cdk synth",
    "cdk:deploy": "cd infrastructure && cdk deploy",
    "cdk:diff": "cd infrastructure && cdk diff"
  },
  "keywords": ["mcp", "voltasis", "api", "documentation", "llm"],
  "author": "Voltasis",
  "license": "ISC",
  "dependencies": {
    "@types/node": "20.10.5",
    "dotenv": "16.3.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.10",
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "aws-cdk": "2.115.0",
    "aws-cdk-lib": "2.115.0",
    "constructs": "10.3.0",
    "esbuild": "0.19.8",
    "eslint": "8.55.0",
    "jest": "29.7.0",
    "openapi-types": "12.1.3",
    "prettier": "3.1.0",
    "ts-jest": "29.1.1",
    "tsx": "4.6.2",
    "typescript": "5.3.2"
  }
}
